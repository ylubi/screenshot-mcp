{
  "name": "screenshot-mcp",
  "version": "1.0.0",
  "description": "MCP server providing screenshot capabilities for AI assistants. Supports window and region capture with three window search methods (handle, title, process name). Includes built-in save functionality.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "node --test tests/integration/*.test.js",
    "test:all": "npm test && npm run test:integration",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "mcp",
    "screenshot",
    "model-context-protocol",
    "ai-tools"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "node-screenshots": "^0.2.1",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "fast-check": "^3.15.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
